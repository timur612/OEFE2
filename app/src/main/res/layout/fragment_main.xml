<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                    android:layout_width="329dp"
                    android:layout_height="207dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#C1BEBE"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="2sp">


                <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:alpha="0.9"
                        app:srcCompat="@drawable/sir_lit" />

                <TextView
                        android:id="@+id/text_card_zag"
                        android:layout_width="285dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="125dp"

                        android:text="Прием заявок на августовскую программу «Литературное творчество» центра «Сириус»"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Новости | 23 апреля"
                        android:textColor="@color/white"
                        android:fontFamily="monospace"
                        android:textSize="10sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="249dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="#192C4C"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="10dp"
                    android:background="@drawable/card_click">

                <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/mgotu" />

                <TextView
                        android:id="@+id/text_card_zag"
                        android:layout_width="285dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="140dp"
                        android:text="Победители и призеры международной открытой олимпиады школьников «МГОТУ» по трем предметам"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="200dp"
                        android:text="Олимпиада проводится для учащихся 10-11 классов из России и зарубежных стран."
                        android:textColor="#C5C5C5"
                        android:textSize="10sp" />

                <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Новости | 23 апреля"
                        android:textColor="@color/white"
                        android:fontFamily="monospace"
                        android:textSize="10sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>