<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

            <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:text="Календарь олимпиад" />

            <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="337dp"
                    android:layout_height="294dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />

            <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="10dp">

                <TextView
                        android:id="@+id/textView20"
                        android:layout_width="285dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="СИРИУС.ДОМА: РАСПИСАНИЕ НА 23 АПРЕЛЯ"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="220dp"
                        android:text="Центр третью неделю поддерживает вас во время самоизоляции полезными лекциями и мастер-классами. Мы провели уже 60 трансляций, на онлайн-занятиях побывало более 22 700 человек. Не сбавляем обороты и рассказываем, чем займемся с вами завтра. Прямые эфиры открыты для всех."
                        android:textSize="15sp" />

                <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginTop="70dp"
                        app:srcCompat="@drawable/sirius_news" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="10dp">

                <TextView
                        android:id="@+id/textView20"
                        android:layout_width="285dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Регистрация финалистов Интернет-олимпиады по физике"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="220dp"
                        android:text="Участникам заключительного этапа Интернет-олимпиады по физике необходимо зарегистрироваться на площадку очного тура «Заключительный тур в режиме прокторинга». Напоминаем, что финал пройдет 11 мая 2020 года в дистанционном формате.  Состязание входит в Перечень олимпиад школьников Минобрнауки России. Ему присвоен первый уровень. Победители и призеры заключительного этапа могут получить льготы при поступлении в вузы."
                        android:textSize="15sp" />

                <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="70dp"
                        app:srcCompat="@drawable/physics_olimp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>