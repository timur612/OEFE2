<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListReaderActivity">
    <androidx.cardview.widget.CardView
            android:id="@+id/algebra_card"
            android:layout_width="337dp" android:layout_height="161dp" android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp" app:cardCornerRadius="20dp">
        <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="170dp"
                android:layout_marginTop="45dp"
                android:text="Алгебра 9 класс" android:textSize="20sp"/>
        <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="170dp"
                android:layout_marginTop="90dp"
                android:text="Автор: Морковка" android:textSize="15sp"/>
        <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginLeft="30dp" android:layout_marginTop="35dp"
                app:srcCompat="@drawable/uch_algebra"/>
        <Button
                android:id="@+id/button_algebra"
                android:layout_width="103dp"
                android:layout_height="25dp" android:layout_marginLeft="190dp"
                android:layout_marginTop="130dp" android:background="@drawable/button_circle"
                android:backgroundTint="@color/blue_cyan" android:text="Открыть" android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>